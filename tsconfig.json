{
  "name": "bodymovin-sandbox",
  "version": "0.0.1",
  "author": "resessh",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2016", "dom"],
    "removeComments": false,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noEmitOnError": true,
    "strictNullChecks": true,
    "target": "es2016",
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "license": "MIT",
  "include": [
    "src/ts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
